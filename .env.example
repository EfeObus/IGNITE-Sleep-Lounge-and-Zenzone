# IGNITE Sleep Lounge and Zen Zone - Environment Configuration
# This is an example configuration file. Create a copy named .env and fill in appropriate values.

# Server Configuration
NODE_ENV=development
PORT=5020

# Database Configuration
DB_HOST=localhost
DB_USER=sleep_lounge_user
DB_PASSWORD=your_strong_password
DB_NAME=sleep_lounge_db
DB_PORT=5432

# Authentication
JWT_SECRET=your_very_long_random_jwt_secret_key
JWT_EXPIRE=7d

# Optional Configuration
LOG_LEVEL=info
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SESSION_COOKIE_SECRET=your_session_cookie_secret

# Development Only (comment out in production)
DISABLE_RATE_LIMIT=true
# MOCK_AUTH=true